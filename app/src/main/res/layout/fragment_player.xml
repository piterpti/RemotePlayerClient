<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cba.piterpti.pl.remoteplayerclient.fragment.PlayerFragment"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="0.25">


                <Button
                    android:id="@+id/main_pause"
                    android:text="Pause"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff700"
                    />

                <Button
                    android:id="@+id/main_stop"
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ff0004"/>


                <Button
                    android:id="@+id/main_play"
                    android:text="Play"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#09b600"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="0.25">

                <Button
                    android:id="@+id/main_prev"
                    android:text="Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:textColor="#aaa"/>

                <Button
                    android:id="@+id/main_next"
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:textColor="#aaa"/>

            </LinearLayout>

            <Button
                android:id="@+id/main_getFileBtn"
                android:text="Get file"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#aa4400"
                android:layout_weight="0.25"/>

            <Button
                android:id="@+id/main_send"
                android:text="Send"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#aa8800"
                android:layout_weight="0.25"/>

            <TextView
                android:id="@+id/main_url"
                android:text="TEST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


</LinearLayout>
