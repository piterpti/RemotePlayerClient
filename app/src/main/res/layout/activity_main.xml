<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cba.piterpti.pl.remoteplayerclient.MainActivity"
    android:orientation="vertical"
    android:background="#999">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <Button
                    android:id="@+id/main_pause"
                    android:text="Pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff700"
                    />

                <Button
                    android:id="@+id/main_stop"
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff0004"/>


                <Button
                    android:id="@+id/main_play"
                    android:text="Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#09b600"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/main_prev"
                    android:text="Prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000"
                    android:textColor="#aaa"/>

                <Button
                    android:id="@+id/main_next"
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000"
                    android:textColor="#aaa"/>

            </LinearLayout>

            <Button
                android:id="@+id/main_getFileBtn"
                android:text="Get file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#aa4400"/>

            <Button
                android:id="@+id/main_send"
                android:text="Send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#aa8800" />

            <TextView
                android:id="@+id/main_url"
                android:text="TEST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
